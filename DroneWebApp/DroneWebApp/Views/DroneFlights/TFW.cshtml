@model DroneWebApp.Models.TFW

@{
    ViewBag.Title = "TFW";
}

<br />
<h2 class="textAlignCenter">TFW</h2>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "DroneFlights")">Drone Flights</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Details", "DroneFlights", new { id = ViewBag.DroneFlightId })">Details</a></li>
        <li class="breadcrumb-item active" aria-current="page">TFW Drone Flight @ViewBag.droneFlight.FlightId</li>
    </ol>
</nav>

@{
    string str = "TBD";
    if (@ViewBag.droneFlight.Date != null)
    {
        str = @ViewBag.droneFlight.Date.ToString("dd/MM/yyyy, HH:mm:ss");
    }
}
<h4><strong>Drone Flight @ViewBag.droneFlight.FlightId (@ViewBag.droneFlight.Location, @str)</strong></h4>

@if (User.IsInRole("Admin") || User.IsInRole("User"))
{
    <a href='@Url.Action("Index", "Files", new { id = @ViewBag.droneFlight.FlightId })' class="anchor_icon">
        <img src="~/Content/images/upload_icon.png" class="img-size" title="Upload files for this Drone Flight">
        <img src="~/Content/images/upload_icon_hover.png" class="img-size" title="Upload files for this Drone Flight">
    </a>
    <br />
}

<div>
    <hr />
    <h4></h4>
    <table class="table table-bordered table-hover table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.xScale_X)
            </th>

            <td>
                @Html.DisplayFor(model => model.xScale_X)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.yRotationTerm_X)
            </th>

            <td>
                @Html.DisplayFor(model => model.yRotationTerm_X)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TranslationTerm_X)
            </th>

            <td>
                @Html.DisplayFor(model => model.TranslationTerm_X)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.xRotationTerm_Y)
            </th>

            <td>
                @Html.DisplayFor(model => model.xRotationTerm_Y)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.yNegativeScale_Y)
            </th>

            <td>
                @Html.DisplayFor(model => model.yNegativeScale_Y)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TranslationTerm_Y)
            </th>

            <td>
                @Html.DisplayFor(model => model.TranslationTerm_Y)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DroneFlight.Location)
            </th>

            <td>
                @Html.DisplayFor(model => model.DroneFlight.Location)
            </td>
        </tr>
    </table>
</div>
<p>
    @Html.ActionLink("Back to Flight Details", "Details", new { id = ViewBag.DroneFlightId }, new { @class = "btn btn-primary btn-sm" }) |
    @Html.ActionLink("Back to Drone Flights List", "Index", null, new { @class = "btn btn-primary btn-sm" })
</p>