@model DroneWebApp.Models.Pilot

@{
    ViewBag.Title = "Create";
}

<br />
<h2 class="textAlignCenter">Create new Pilot</h2>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Pilots")">Pilots</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create new Pilot</li>
    </ol>
</nav>

@if (@ViewBag.ErrorPilotCreate != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorPilotCreate
    </div>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
