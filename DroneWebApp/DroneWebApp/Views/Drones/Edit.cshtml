@model DroneWebApp.Models.Drone

@{
    ViewBag.Title = "Edit";
}

<br />
<h2 class="textAlignCenter">Edit Drone</h2>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Drones")">Drones</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit @Model.DroneName</li>
    </ol>
</nav>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4><strong>@Model.DroneType:@Model.Registration</strong></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.DroneId)

    <div class="form-group">
        <label class="control-label col-md-2">DroneType<span class="redBrightText">*</span></label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DroneType, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DroneType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Registration<span class="redBrightText">*</span></label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Registration, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Registration, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DroneName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DroneName, "", new { @class = "text-danger" })
            Leave blank to auto-generate Drone name.
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Needs check-up?</label>
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.needsCheckUp) <br />
            (Unchecking this option will indicate that the drone has been checked at Aalst and is deemed safe to fly for another X hours.)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Notes, new { @class = "notesSize", maxlength = 1000 } )
            @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="redBrightText">* required</div>
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Drones List", "Index", null, new { @class = "btn btn-primary btn-sm" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
