@model DroneWebApp.Models.Drone

@{
    ViewBag.Title = "Delete Drone";
}

<br />
<h2>Delete drone: <span class='deletionText'>@Model.DroneName</span></h2>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Drones")">Drones</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete Drone @Model.DroneName</li>
    </ol>
</nav>

@if (@ViewBag.ErrorDroneDelete != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorDroneDelete
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        Are you sure you want to delete this <strong>drone</strong>? Note that you cannot delete Drones if they have Flights assigned to them.
    </div>
}
<div>
    <hr />
    <p class="textAlignCenter">
        <strong>Information</strong>
    </p>
    <div>
        <table class="table table-bordered table-hover table-striped">
            <tr>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <td>
                    @Html.DisplayFor(model => model.DroneName)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayName("Total Flights")
                </th>
                <td>
                    @ViewBag.TotalFlights
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayName("Total Time Flown")
                </th>
                <td>
                    @Model.TotalFlightTime.ToString()
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Registration)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Registration)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DroneType)
                </th>
                <td>
                    @Html.DisplayFor(model => model.DroneType)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <td>
                    @Html.TextAreaFor(model => model.Notes, new { @class = "notesSize-pointer", @readonly = "readonly" })
                </td>
            </tr>
        </table>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to Drones List", "Index", null, new { @class = "btn btn-primary whiteText" })
        </div>
    }
</div>
